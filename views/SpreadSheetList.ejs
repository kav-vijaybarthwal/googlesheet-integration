<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <title>SpreadSheet List</title>
</head>

<body>
  <div class="min-vh-100 min-vw-100">
    <div class="container ">
      <%- include('Header') %>
        <div class="my-5">
          <% if (files && files.length> 0) { %>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">File Name</th>
                  <th scope="col">Last</th>
                  <th scope="col">Handle</th>
                </tr>
              </thead>
              <tbody>
                <% files.forEach((file, index)=> { %>
                  <tr>
                    <th scope="row">
                      <%= index + 1 %>
                    </th>
                    <td>
                      <%= file.name %>
                    </td> <!-- Replace 'firstName' with the actual property of your file object -->
                    <td>
                      <%= file.mimeType %>
                    </td> <!-- Replace 'lastName' with the actual property of your file object -->
                    <td>
                      <button onclick="copyFileId('<%= file.id %>')" class="btn btn-primary">
                        Select File
                      </button>
                    </td> <!-- Replace 'handle' with the actual property of your file object -->
                  </tr>
                  <% }); %>
              </tbody>
            </table>
            <% } else { %>
              <p>No files available.</p>
              <% } %>
        </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
  <script>
    function copyFileId(fileId) {
      // Copy the fileId to the clipboard
      const hostname = window.location.host
      const generateUrl = `${hostname}/files/${fileId}`
      navigator.clipboard.writeText(fileId)
        .then(() => {
          console.log("File ID copied to clipboard!", generateUrl);
        })
        .catch(err => {
          console.error('Unable to copy to clipboard', err);
        });
    }
  </script>
</body>

</html>